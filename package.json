{
  "name": "docker-log-summariser-mcp",
  "version": "0.1.0",
  "description": "Stream Docker container logs, summarise with Gemini, allow Q&A",
  "main": "src/index.js",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./collector": "./src/collector.js",
    "./summariser": "./src/summariser.js"
  },
  "sideEffects": false,
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "start:api": "node src/api.js",
    "start:cli": "node src/cli.js",
    "test:coverage": "vitest run --coverage",
    "bench:file": "node scripts/benchmark-file-ingestion.js",
    "dev:all": "bash scripts/dev-all.sh"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@google/generative-ai": "^0.2.1",
    "better-sqlite3": "^9.4.0",
    "dockerode": "^4.0.2",
    "fastify": "^4.26.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "prom-client": "^15.1.0",
    "socket.io": "4.7.2",
    "socket.io-client": "4.7.2",
    "winston": "^3.11.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/react": "19.1.8",
    "eslint": "^8.56.0",
    "supertest": "^6.3.4",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "docker",
    "logs",
    "gemini",
    "ai",
    "summarisation",
    "mcp"
  ],
  "author": "Progressus Software Ltd.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stanley-marketing/docker-container-logs.git"
  },
  "bugs": {
    "url": "https://github.com/stanley-marketing/docker-container-logs/issues"
  },
  "homepage": "https://github.com/stanley-marketing/docker-container-logs#readme",
  "license": "MIT"
}
